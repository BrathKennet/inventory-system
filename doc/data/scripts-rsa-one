/* You can change the user "test@gmail.com" to whatever you want. */

CREATE POLICY "All options" ON "public"."categories"
AS PERMISSIVE FOR ALL
TO authenticated
USING (((auth.jwt() ->> 'email'::text) = 'admin@gmail.com'::text))

